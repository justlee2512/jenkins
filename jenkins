pipeline {
    agent any

    tools {
        maven 'Maven'  // Tên bạn đã cấu hình trong Global Tool Configuration
        jdk 'JDK'      // Tên JDK đã cài nếu có, hoặc bỏ nếu không dùng
    }

    environment {
        // Đảm bảo đã cấu hình các thông tin về Nexus Repository tại đây
        NEXUS_URL = 'https://nexus.example.com/repository/maven-releases/'
        NEXUS_CREDENTIALS = 'nexus-credentials'  // Tên credentials được cấu hình trong Jenkins (username:password)
    }

    stages {
        stage('Checkout Code') {
            steps {
                git credentialsId: 'f90900a0-dd27-4120-a986-56588c9c81c3', url: 'https://github.com/justlee2512/Heart.git', branch: 'master'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Deploy to Nexus') {
            steps {
                sh """ ls -la target """
                script {
                    // Sử dụng Maven deploy để đẩy WAR lên Nexus
                    withCredentials([usernamePassword(credentialsId: 'Nexus', usernameVariable: 'NEXUS_USER', passwordVariable: 'NEXUS_PASSWORD')]) {
                        sh """
                            mvn deploy:deploy-file \
                            -Durl=http://192.168.2.59:8081/repository/maven-releases/ \
                            -DrepositoryId=Nexus \
                            -Dfile=target/heart-animation-0.0.1-SNAPSHOT.war \
                            -DgroupId=com.blackhat \
                            -DartifactId=heart-animation \
                            -Dversion=0.0.1 \
                            -Dpackaging=war \
                            -DgeneratePom=true \
                            -Dusername=${NEXUS_USER} \
                            -Dpassword=${NEXUS_PASSWORD}
                        """
                    }
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/target/*.war', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully and WAR deployed to Nexus!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
